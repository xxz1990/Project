<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.korron.project.MainActivity">

    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/launcher_1"
        android:id="@+id/iv_launcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_horizontal"
            android:text="请选择登入方式"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_weibo_login"
                android:src="@mipmap/logo_weibo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon64_wx_logo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/qq_logo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="64dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
